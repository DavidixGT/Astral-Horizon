    <member name="WeaponType" type="enum" typeid="AiWeaponCategory" case="SelectWeapon" />
    <member name="Result" type="bool" case="ConstantResult,CompleteOnce" />

    <member name="MinValue" type="float" case="HaveEnoughEnergy,RechargeEnergy" alias="FailIfLess" minvalue="0" maxvalue="1" default="0.1" />
