    <member name="MinValue" type="float" case="FlyAroundMothership,KeepDistance" alias="MinDistance" minvalue="0" maxvalue="10" default="2.5" />
    <member name="MaxValue" type="float" case="FlyAroundMothership,KeepDistance" alias="MaxDistance" minvalue="0" maxvalue="10" default="3.5" />
    <member name="DeviceClass" type="enum" typeid="DeviceClass" case="ActivateDevice" />

